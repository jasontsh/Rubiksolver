<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.pennapps.f15.rubiksolver" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".InputActivity"
            android:label="@string/title_activity_input" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RubikViewer"
            android:label="@string/title_activity_rubik_viewer" >
            android:parentActivityName=".InputActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".InputActivity" />
        </activity>
        <activity
            android:name=".ARActivity"
            android:label="@string/title_activity_ar" >
            android:parentActivityName=".InputActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".InputActivity" />
        </activity>
    </application>

</manifest>
